<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblListItemTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Kabaret na żywo według Paranienormalnych - Kabaret"
                    android:textColor="@color/Tytul"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toStartOf="@+id/lblListItemPlay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/lblListItemAdd"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons8_plus_math_48" />

                <ImageButton
                    android:id="@+id/lblListItemPlay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/transparent"
                    android:textAlignment="viewStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/lblListItemAdd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons8_play_48" />
        </android.support.constraint.ConstraintLayout>

</LinearLayout>